{
  "name": "dragonglass",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development node-dev -r esm index.js",
    "dev:site": "cross-env NODE_ENV=development node rollup.js",
    "dev:sass": "node-sass -rw --precision 4 scss -o site/public/css",
    "dev": "run-all 'yarn dev:site' 'yarn dev:server' 'yarn dev:sass'",

    "build:site": "cross-env NODE_ENV=production node rollup.js",
    "build:sass": "node-sass -r --precision 4 --output-style compressed scss/main.scss -o dist",

    "build": "run-all 'yarn build:site' 'yarn build:sass'"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-transform-react-jsx": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@rollup/plugin-buble": "^0.20.0",
    "compression": "^1.7.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "esm": "^3.2.25",
    "micro": "^9.3.4",
    "micro-ex-router": "^1.7.2",
    "modern-css-reset": "^1.0.4",
    "node-dev": "^4.0.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.1",
    "nyc": "^14.1.1",
    "rollup": "^1.27.8",
    "rollup-plugin-async": "^1.2.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-buble": "0.19.8",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-progress": "^1.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.1.2",
    "run-all": "^1.0.1",
    "valyrian.js": "^4.3.1"
  },
  "esm": {
    "await": true,
    "sourceMap": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "chrome": 71,
            "firefox": 64,
            "safari": 10,
            "node": "10.16.3"
          },
          "loose": true,
          "shippedProposals": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "v"
        }
      ]
    ]
  }
}
